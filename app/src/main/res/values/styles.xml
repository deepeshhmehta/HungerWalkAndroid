<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="login_btn_theme">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="hintTextAppear">
        <item name="android:textColor">@color/hintColorText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="buttonTheme">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="signup_btn_theme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">25sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="register_btn_theme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#bdbdbd</item>
        <item name="android:textSize">13sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="recoverpassword_btn_theme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#bdbdbd</item>
        <item name="android:textSize">13sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="commentLableStyle">
        <item name="android:textColor">@color/hintColorText</item>
    </style>
    <style name="commentTextStyle">
        <item name="android:colorControlNormal">@color/hintColorText</item>
        <item name="android:colorControlActivated">@color/hintColorText</item>
    </style>

</resources>
